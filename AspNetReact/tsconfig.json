{
  "compilerOptions": {
    "lib": [ "DOM", "ES2015" ],
    "target": "es5",
    "noEmitOnError": true,
    "strict": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "wwwroot/js",
    "allowJs": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["ClientApp/"],
  "exclude": [
    "node_modules",
    "wwwroot",
    "ClientApp/__tests__"
  ],
  "compileOnSave": true
}